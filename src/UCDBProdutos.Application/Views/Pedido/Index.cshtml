@model List<UCDBProdutos.Application.Models.Pedido>

@{
    ViewBag.Title = "Listagem - Pedidos";
}

        
<a href="/pedido/cadastrar" class="btn btn-primary">Cadastrar</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome Pedido</th>
            <th scope="col">Valor</th>
            <th scope="col">Data Vencimento</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
<tbody>

    @foreach(var pedido in Model)
    {
        <tr>
            <th scope="row">@pedido.Id</th>
            <td style="color:@pedido.Cor;"><b>@pedido.NomeProduto</b></td>
            <td>@pedido.Valor</td>
            <td>@pedido.DataVencimento</td>
            <td>
                <a href="/pedido/atualizar/@pedido.Id" class="btn">Atualizar</a>
                <a href="/pedido/remover/@pedido.Id" class="btn">Excluir</a>
            </td>
        </tr>
    }       
</tbody>
</table>
