@model UCDBProdutos.Application.Models.Pedido
@{
    ViewBag.Title = "Pedido - Cadastrar";
}

      <form method="post">
        <input type="hidden" name="id" value="@Model.Id"/>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" name="NomeProduto" value="@Model.NomeProduto" class="form-control" id="NomeProduto" placeholder="Digite o nome do produto" required>
        <label for="nome">Valor</label>
        <input type="text" name="Valor" class="form-control" id="Valor" placeholder="Digite o valor do produto" required>
        <label for="nome">Data Vencimento</label>
        <input type="text" name="DataVencimento" class="form-control" id="DataVencimento" placeholder="Digite da data de vencimento do produto" required>
    </div>

        <button type="submit" class="btn btn-primary">Salvar</button>

      </form>


